<p id="notice"><%= notice %></p>

<h1>General Tasks List</h1>

<table>
<tr>
  <%= form_with url: tasks_path, method: :get, html: {class: "form-horizontal"} , local: true do |form| %>
  <td><%= form.label :name, "Task name"  %></td>
  <td><%= form.text_field :name, size: "40x10"%></td>
  <td><%= form.label :status, "Status" %></td>
  <td><%= form.select :status, options_for_select([[''],['Not started'], ['In progress'], ['Completed']])%></td>
  <td><%= form.submit value: "search", type: "submit" %></td>
</tr>
<% end %>

</table>
<br>

<p>
  <button type="button" class="btn btn-info btn-sm" id="sort_deadline"><%= link_to "Sort by end deadline", tasks_path(sort_expired: "true") %></button>
  <button type="button" class="btn btn-info btn-sm" id="sort_priority"><%= link_to "Sort by priority", tasks_path(sort_priority_high: "true") %></button>
  </p>

<table class="col-md-12">
  <thead>
    <tr>
      <th class="col-md-2">Task name</th>
      <th class="col-md-3">Description</th>
      <th class="col-md-1">Priority</th>
      <th class="col-md-1">Deadline</th>
      <th class="col-md-1">Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
       <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Details', task, data: { confirm: 'Are you sure you want to see the task details?' } %></td>
        <td><%= link_to 'Edit', edit_task_path(task), data: { confirm: 'Are you sure you want to edit the task?' } %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure you want to delete the task?' } %></td>
      </tr>
    <% end %>
    <%= paginate @tasks %>
  </tbody>
 </table>


 <button class="btn btn-primary" type="button"><%= link_to 'Create a task', new_task_path %></button>
